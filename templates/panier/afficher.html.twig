{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1>Mon Panier</h1>

    {% if produits is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix unitaire</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in produits %}
                    <tr>
                        <td>
                            <img src="{{ asset('images/' ~ item.produit.getFirstImage()) }}" alt="{{ item.produit.nomProduit }}" class="img-fluid" style="width: 80px;">
                            <p>{{ item.produit.nomProduit }}</p>
                        </td>
                        <td>
                            <!-- Boutons pour diminuer et augmenter la quantité -->
                            <button class="btn btn-outline-secondary" onclick="updateQuantity('{{ path('app_panier_update', {'id': item.produit.id, 'action': 'decrease'}) }}')">-</button>
                            <span>{{ item.quantite }}</span>
                            <button class="btn btn-outline-secondary" onclick="updateQuantity('{{ path('app_panier_update', {'id': item.produit.id, 'action': 'increase'}) }}')">+</button>
                        </td>
                        <td>{{ item.produit.prix }} €</td>
                        <td>{{ item.produit.prix * item.quantite }} €</td>
                        <td>
                            <a href="{{ path('app_panier_remove', {'id': item.produit.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="total">
            <p><strong>Total du panier : </strong>{{ total }} €</p>
        </div>

        <div>
            <a href="{{ path('app_dashboard') }}" class="btn btn-primary">Continuer les achats</a>
            <a href="#" class="btn btn-success">Passer à la caisse</a>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/panier.js') }}"></script>
{% endblock %}
