<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {# Bootstrap #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" >

        {# CSS personnalisé #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">


        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}{% endblock %}
    </head>
    <body>
        {% if app.request.attributes.get('_route') not in ['app_login', 'app_register'] %}
            <!-- Header avec logo et bouton de déconnexion ou de connexion -->
            <div class="header">
                <a href="{% if is_granted('IS_AUTHENTICATED_FULLY') %}{{ path('app_dashboard') }}{% else %}{{ path('home') }}{% endif %}">
                    <img src="{{ asset('images/Logo PowerCash.png') }}" alt="PowerCash Logo" class="header-logo">
                </a>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <!-- Afficher le bouton Logout si l'utilisateur est connecté -->
                    <button class="auth-btn" onclick="window.location.href='{{ path('app_logout') }}'">Logout</button>
                {% else %}
                    <!-- Afficher le bouton Login si l'utilisateur n'est pas connecté -->
                    <button class="auth-btn" onclick="window.location.href='{{ path('app_login') }}'">Login</button>
                {% endif %}
            </div>
            
            <!-- Barre de navigation -->
            <div class="navbar">
                <a href="{{ path('home') }}">Mon Espace</a>
                <a href="#">Categories</a>
                <a href="#">Contact</a>

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_panier') }}">Mon Panier</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_produit_index') }}">Produits</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_user_index') }}">Utilisateurs</a>
                {% endif %}
            </div>
            
             <!-- Barre de recherche, visible seulement sur /home ou /dashboard -->
            {% if app.request.getRequestUri() == path('home') or app.request.getRequestUri() == path('app_dashboard') %}
                <div class="search-container">
                    <input type="text" placeholder="Rechercher un produit..." class="search-bar">
                </div>
            {% endif %}
        {% endif %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" ></script>
        
        {% block body %}{% endblock %}
    </body>
</html>
