{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
    
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
    <img src="{{ asset('images/Logo PowerCash.png') }}" alt="Logo" style="width: 150px;">
    <div class="register-container">
        <h2>INSCRIPTION</h2>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}

        <h3>Informations personnelles</h3>
        {{ form_row(registrationForm.utilisateur.nom) }}
        {{ form_row(registrationForm.utilisateur.prenom) }}
<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="checkbox-group">
            <label for="admin_role">Rôle admin</label>
            {{ form_row(registrationForm.adminRole) }}
        </div>

        <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <div class="login-link">
            <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous ici</a></p>
        </div>
    </div>
{% endblock %}