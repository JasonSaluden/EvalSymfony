{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #e4a620;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        text-align: center;
    }
    .register-container {
        background-color: #e6ddce;
        border: 4px solid red;
        border-radius: 25px;
        width: 400px;
        margin: 80px auto;
        padding: 40px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .register-container h2 {
        margin-bottom: 30px;
        font-size: 24px;
    }
    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }
    .form-group label {
        display: block;
        margin-bottom: 5px;
    }
    input[type="email"], input[type="password"] {
        width: 100%;
        padding: 12px;
        margin: 5px 0;
        border-radius: 10px;
        border: 1px solid #ccc;
        box-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    .checkbox-group {
        text-align: left;
        margin: 15px 0;
    }
    button {
        background-color: #3c9c3c;
        color: yellow;
        padding: 12px 30px;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        margin-top: 10px;
    }
    .error-text {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }
    .login-link {
        margin-top: 20px;
    }
</style>
{% endblock %}

{% block body %}
    <img src="{{ asset('images/Logo PowerCash.png') }}" alt="Logo" style="width: 150px;">
    <div class="register-container">
        <h2>INSCRIPTION</h2>

        {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword) }}

    <h3>Informations personnelles</h3>
    {{ form_row(registrationForm.utilisateur.nom) }}
    {{ form_row(registrationForm.utilisateur.prenom) }}

    <button type="submit" class="btn">S'inscrire</button>
{{ form_end(registrationForm) }}

        <div class="login-link">
            <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous ici</a></p>
        </div>
{% endblock %}