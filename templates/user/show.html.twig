{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/users.css') }}">
{% endblock %}


{% block body %}
    <div class="container mt-4 container-users">
        <h1>Détails de l'utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.utilisateur.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.utilisateur.prenom }}</td>
                </tr>
                <tr>
                    <th>Date d'inscription</th>
                    <td>{{ user.utilisateur.dateInscription ? user.utilisateur.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}