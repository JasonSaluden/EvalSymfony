{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}

        <img src="{{ asset('images/Logo PowerCash.png') }}" alt="Logo" style="width: 150px;">
    <div class="login-container">
        <h2>CONNEXION</h2>

        <form method="post" action="{{ path('app_login') }}">
            <input type="text" name="_username" placeholder="Login" required>
            <input type="password" name="_password" placeholder="Password" required>
            <button type="submit">$ Valider</button>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
        <a href="{{ path('home') }}">
            <button type="button" class="btn-no-login">Accéder au site sans être connecté</button>
        </a>

        <div class="google-login">
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}">
                <img src="https://developers.google.com/identity/images/btn_google_signin_dark_normal_web.png"
                     alt="Connexion Google">
            </a>
        </div>
        <h3>Pas encore inscrit ?</h3>
        <a href="{{ path('app_register') }}">S'inscrire</a>
    </div>
{% endblock %}
